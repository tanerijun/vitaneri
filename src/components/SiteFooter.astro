---
import { myInfo } from "../data/my-info";
import MailIcon from "./icons/MailIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import TwitterIcon from "./icons/TwitterIcon.astro";
import ThreadsIcon from "./icons/ThreadsIcon.astro";
import BlueSkyIcon from "./icons/BlueSkyIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import RSSIcon from "./icons/RSSIcon.astro";

const shouldHideSocials = Astro.url.pathname === "/";
---

<footer class="mt-auto">
  <div class="mx-auto flex max-w-2xl flex-col-reverse items-center justify-between gap-4 py-8 md:flex-row md:gap-0">
    <div class="text-sm text-zinc-500 dark:text-zinc-400">
      <a
        href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
        target="_blank"
        rel="noreferrer"
        class="underline decoration-zinc-300 underline-offset-4 transition-colors hover:text-zinc-900 hover:decoration-zinc-700 dark:decoration-zinc-500 hover:dark:text-zinc-100 hover:dark:decoration-zinc-300"
      >
        CC BY-NC-SA 4.0
      </a>
      <span>Â© 2022-{new Date().getFullYear()} Vincent Taneri</span>
    </div>
    {
      !shouldHideSocials && (
        <div class="flex items-center gap-2">
          <a href={`mailto:${myInfo.email}`} aria-label="email">
            <MailIcon class="h-5 w-5 text-zinc-400 transition-colors hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-zinc-100" />
          </a>
          <a href={myInfo.github} target="_blank" rel="noreferrer" aria-label="github">
            <GithubIcon class="h-5 w-5 text-zinc-400 transition-colors hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-zinc-100" />
          </a>
          <a href={myInfo.twitter} target="_blank" rel="noreferrer" aria-label="twitter">
            <TwitterIcon class="h-5 w-5 text-zinc-400 transition-colors hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-zinc-100" />
          </a>
          <a href={myInfo.threads} target="_blank" rel="noreferrer" aria-label="threads">
            <ThreadsIcon class="h-5 w-5 text-zinc-400 transition-colors hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-zinc-100" />
          </a>
          <a href={myInfo.blueSky} target="_blank" rel="noreferrer" aria-label="bluesky">
            <BlueSkyIcon class="h-5 w-5 text-zinc-400 transition-colors hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-zinc-100" />
          </a>
          <a href={myInfo.linkedIn} target="_blank" rel="noreferrer" aria-label="linkedIn">
            <LinkedInIcon class="h-5 w-5 text-zinc-400 transition-colors hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-zinc-100" />
          </a>
          <a href="/rss.xml" target="_blank" rel="noreferrer" aria-label="rss">
            <RSSIcon class="h-5 w-5 text-zinc-400 transition-colors hover:text-zinc-900 dark:text-zinc-600 dark:hover:text-zinc-100" />
          </a>
        </div>
      )
    }
  </div>
</footer>

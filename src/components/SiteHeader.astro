---
import ThemeToggler from "./ThemeToggle";
import { twJoin } from "../lib/tw-join";

const navLinks = [
	{
		displayText: "Posts",
		url: "/posts",
	},
	{
		displayText: "Tags",
		url: "/tags",
	},
	{
		displayText: "TILs",
		url: "/tils",
	},
	{
		displayText: "Projects",
		url: "/projects",
	},
];

const activePath = Astro.url.pathname.split("/")[1];
---

<header>
	<!-- Skip To Content -->
	<!-- Normally hidden, useful for screen reader or keyboard user -->
	<a
		id="skip-to-content"
		href="#main-content"
		class="top absolute -top-full left-16 z-50 bg-gray-100 p-2 drop-shadow-md transition-all focus:top-4 dark:bg-gray-950"
	>
		Skip to content
	</a>

	<div class="mx-auto flex max-w-2xl items-center justify-between py-8">
		<div id="site-logo">
			<a href="/" rel="prefetch">
				<span class="inline-block select-none">Vitaneri</span>
			</a>
		</div>

		<div class="flex items-center gap-8">
			<nav class="hidden items-center gap-6 md:flex">
				{
					navLinks.map((navLink) => {
						const isActive = "/" + activePath === navLink.url;

						return (
							<div class="relative">
								<a
									href={navLink.url}
									class={twJoin(
										"text-sm transition-colors md:text-base",
										isActive
											? "text-gray-900 dark:text-gray-100"
											: "text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100",
									)}
									rel="prefetch"
								>
									{navLink.displayText}
								</a>
								{isActive && (
									<div
										id="active-nav"
										class="absolute h-0.5 w-full bg-gray-200 transition-colors duration-200 dark:bg-gray-700"
										aria-hidden="true"
										transition:name="active-nav-marker"
									/>
								)}
							</div>
						);
					})
				}
			</nav>

			<ThemeToggler client:idle />
		</div>
	</div>
</header>

---
type Props = {
	tag: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
	text: string | number;
};

const { tag, text } = Astro.props;
const Element = tag;
---

<Element class="stroked">{text}</Element>

<style>
	.stroked {
		position: absolute;
		top: -130px;
		left: -45px;
		color: transparent;
		font-weight: 700;
		font-size: 10em;
		user-select: none;
		pointer-events: none;
		z-index: -10;
		text-shadow:
			-1px -1px 0 black,
			1px -1px 0 black,
			-1px 1px 0 black,
			1px 1px 0 black;
	}
	@supports (-webkit-text-stroke-width: 1px) {
		.stroked {
			-webkit-text-stroke-width: 3px;
			-webkit-text-stroke-color: #f4f4f5;
			text-shadow: none;
		}
	}
</style>

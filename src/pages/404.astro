---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageLink from "../components/PageLink.astro";
---

<BaseLayout title="Not Found" description="404 | Page not found.">
  <div class="mx-auto flex max-w-xl flex-col items-center justify-center">
    <h2 class="text-9xl font-bold md:text-[12rem]">404</h2>
    <div class="flex flex-col items-center gap-4 text-center">
      <p class="text-4xl font-bold">You have found a secret place.</p>
      <p class="text-zinc-500">
        Unfortunately, this is only a 404 page. You may have mistyped the address, or the page has been moved to another URL.
      </p>
      <PageLink to="/" text="Back to home page" />
    </div>
  </div>
</BaseLayout>

---
import { getCollection, getEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import PostList from "../components/PostList.astro";
import SectionWrapper from "../components/SectionWrapper.astro";
import ProseWrapper from "../components/ProseWrapper.astro";
import PageLink from "../components/PageLink.astro";
import BlueSkyIcon from "../components/icons/BlueSkyIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import ThreadsIcon from "../components/icons/ThreadsIcon.astro";
import TwitterIcon from "../components/icons/TwitterIcon.astro";
import { myInfo } from "../data/my-info";

const postEntries = (await getCollection("posts"))
	.sort((a, b) => b.data.datetime.getTime() - a.data.datetime.getTime())
	.slice(0, 10);

const tilEntries = await getCollection("tils");

const { Content: WelcomeMessage } = await (await getEntry("misc", "welcome-message")).render();
const { Content: AboutMe } = await (await getEntry("misc", "about-me")).render();
const { Content: LatestTIL } = await tilEntries[tilEntries.length - 1]!.render();
---

<BaseLayout>
	<div class="mx-auto mt-20 flex max-w-2xl flex-col gap-40">
		<SectionWrapper headingText="Hello">
			<ProseWrapper>
				<WelcomeMessage />
			</ProseWrapper>
		</SectionWrapper>

		<SectionWrapper headingText="Blog">
			<div class="flex flex-col gap-6">
				<p>Here are some of my recent blog posts:</p>
				<PostList entries={postEntries} showYear />
				<PageLink to="/posts" text="View all" />
			</div>
		</SectionWrapper>

		<SectionWrapper headingText="TIL">
			<div class="flex flex-col gap-5">
				<ProseWrapper>
					<p>
						I sometimes stumble upon bite-sized insights that I want to share, yet don't quite demand an entire blog
						post. I call them TIL -- Today I Learned.
					</p>
					<p>Here is my newest TIL:</p>
					<LatestTIL />
				</ProseWrapper>
				<PageLink to="/tils" text="View all" />
			</div>
		</SectionWrapper>

		<SectionWrapper headingText="Me">
			<ProseWrapper>
				<AboutMe />
			</ProseWrapper>
		</SectionWrapper>

		<SectionWrapper headingText="Read">
			<ProseWrapper>
				<p>Speaking of reading, here are some books I'm reading:</p>
				<ul>
					<li>TODO: get data from goodreads</li>
				</ul>
			</ProseWrapper>
		</SectionWrapper>

		<SectionWrapper headingText="RSS">
			<p>
				Stay up to date by subscribing to my
				<a
					href="/rss.xml"
					target="_blank"
					rel="noreferrer"
					class="underline decoration-zinc-300 underline-offset-4 transition-colors hover:text-zinc-900 hover:decoration-zinc-700 dark:decoration-zinc-500 dark:hover:text-zinc-100 dark:hover:decoration-zinc-300"
				>
					RSS feed
				</a>
				 .
			</p>
		</SectionWrapper>

		<SectionWrapper headingText="Chat">
			<div class="flex flex-col gap-6">
				<p>React out to me on:</p>
				<div class="flex flex-wrap items-center gap-6">
					<a href={`mailto:${myInfo.email}`} aria-label="email" class="social-link group">
						<MailIcon class="social-icon" />
						<span class="social-text"> Email</span>
					</a>
					<a href={myInfo.github} target="_blank" rel="noreferrer" aria-label="github" class="social-link group">
						<GithubIcon class="social-icon" />
						<span class="social-text"> Github</span>
					</a>
					<a href={myInfo.twitter} target="_blank" rel="noreferrer" aria-label="twitter" class="social-link group">
						<TwitterIcon class="social-icon" />
						<span class="social-text"> Twitter</span>
					</a>
					<a href={myInfo.threads} target="_blank" rel="noreferrer" aria-label="threads" class="social-link group">
						<ThreadsIcon class="social-icon" />
						<span class="social-text"> Threads</span>
					</a>
					<a href={myInfo.blueSky} target="_blank" rel="noreferrer" aria-label="bluesky" class="social-link group">
						<BlueSkyIcon class="social-icon" />
						<span class="social-text"> BlueSky</span>
					</a>
					<a href={myInfo.linkedIn} target="_blank" rel="noreferrer" aria-label="linkedIn" class="social-link group">
						<LinkedInIcon class="social-icon" />
						<span class="social-text"> LinkedIn</span>
					</a>
				</div>
			</div>
		</SectionWrapper>
	</div>
</BaseLayout>

<style>
	.social-link {
		@apply flex items-center gap-1;
	}

	.social-icon {
		@apply h-5 w-5 text-zinc-400 transition-colors group-hover:text-zinc-700 dark:text-zinc-500 dark:group-hover:text-zinc-300;
	}

	.social-text {
		@apply text-sm text-zinc-600 underline decoration-zinc-300 underline-offset-4 transition-colors group-hover:text-zinc-900 group-hover:decoration-zinc-700 dark:text-zinc-400 dark:decoration-zinc-500 dark:group-hover:text-zinc-100 dark:group-hover:decoration-zinc-300;
	}
</style>
